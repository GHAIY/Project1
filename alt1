#include <stdio.h>
void main()
{
    int r,i,j,k;
    printf("enter row:\n");
    scanf("%d",&r);
    for(i=1;i<=r;i++)
    {
        for(k=0;k<i;k++)
        {
            printf(" ");
        }
        for(j=i;j<=r;j++)
        {
            printf("%d ",j);
        }
        printf("\n");
    }
    for(i=1;i<=r;i++)
    {
        for(k=0;k<r-i;k++)
        {
            printf(" ");
        }
        for(j=1;j<=i;j++)
        {
            printf(" %d",r-i+j);
        }
        printf("\n");
    }
}


